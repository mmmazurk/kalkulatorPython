# zadanie II.3 kalkulator

def dodaj(a, b):
    return a + b
def odejmij(a, b):
    return a - b
def mnoz(a, b):
    return a * b
def dziel(a, b):
    if b != 0:
        return a / b
    else:
        return "Nie dziel przez zero!"
def kalkulator():
    print("Kalkulator - zad.II.3")
    print("Wybierz działanie:")
    print("1. Dodawanie")
    print("2. Odejmowanie")
    print("3. Mnożenie")
    print("4. Dzielenie")
    
    wybor = input("Wprowadź numer działania (1 lub 2 lub 3 lub 4): ")

    if wybor in ['1', '2', '3', '4']:
        try:
            liczba1 = float(input("Wprowadź pierwszą liczbę: "))
            liczba2 = float(input("Wprowadź drugą liczbę: "))
        except ValueError:
            print("Wprowadź liczby")
            return

        if wybor == '1':
            print("Wynik:", dodaj(liczba1, liczba2))
        elif wybor == '2':
            print("Wynik:", odejmij(liczba1, liczba2))
        elif wybor == '3':
            print("Wynik:", mnoz(liczba1, liczba2))
        elif wybor == '4':
            print("Wynik:", dziel(liczba1, liczba2))
    else:
        print("Zly wybór. Spróbuj jeszcze raz.")

kalkulator()
